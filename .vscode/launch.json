    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/client/bin/Debug/net7.0/client.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/client",
            "console": "internalConsole",
            "stopAtEntry": false, 
            "env": {
                "AZURE_OPENAI_API_KEY": "<<Your AZURE OPENAI API KEY HERE>>",
                "AZURE_OPENAI_ENDPOINT": "<<Your AZURE OPENAI ENDPOINT HERE>>",
                "AZURE_OPENAI_DEPLOYMENTNAME": "<<YOUR AZURE OPENAI DEPLOYMENTNAME HERE>>", 
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}